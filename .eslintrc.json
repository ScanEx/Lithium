{
    "extends": "eslint:recommended",
    "rules": {
      "no-console": 0,
      "no-constant-condition": 0,
      "camelcase": 2,      
      "no-mixed-spaces-and-tabs": [2, "smart-tabs"],      
      "keyword-spacing": ["error"],
      "no-lonely-if": 2,
      "comma-style": 2,
      "no-extend-native": 2,
      "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
      "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }]      
    },
    "globals": {
      "L": true,
      "Backbone": true,
      "Handlebars": true,
      "Promise": true,
      "ActiveXObject": true,
      "$": true,
      "_": true,
      "jQuery": true,
      "_gtxt": true,
      "tinyMCE": true,
      "$LAB": true,
      "_mapHelper": true,
      "_queryMapLayers": true,
      "_layersTree": true,
      "_translationsHash": true
    },
    "env": {
      "browser": true     
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"  
    }
  }