{
    "extends": "eslint:recommended",
    "rules": {
      "no-console": 0,
      "no-constant-condition": 0,
      "camelcase": 2,      
      "no-mixed-spaces-and-tabs": [2, "smart-tabs"],      
      "keyword-spacing": ["error"],
      "no-lonely-if": 2,
      "comma-style": 2,
      "no-extend-native": 2,
      "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
      "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }]      
    },
    "globals": {
      "L": true,
      "Backbone": true,
      "Handlebars": true,
      "$": true,
      "jQuery": true,
      "_gtxt": true,
      "module": false,
      "require": false,
      "define": false,
      "ActiveXObject": true,
      "Deferred": true,
      "gmxImageLoader": true,
      "gmxParsers": true,
      "gmxSessionManager": true,
      "DataManager": true,
      "StyleManager": true,
      "ScreenVectorTile": true,
      "gmxImageTransform": true,
      "ProjectiveImage": true,
      "VectorTile": true,
      "Observer": true,
      "gmxVectorTileLoader": true,
      "TilesTree": true,
      "gmxMapManager": true,
      "gmxMap": true,
      "gmxAPIutils": true,
      "Float32Array": true,
      "Float64Array": true
    },
    "env": {
      "browser": true     
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"  
    }
  }